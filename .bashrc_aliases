#aliasception
alias list-aliases='cat ~/.bashrc_aliases'
alias lal='cat ~/.bashrc_aliases'
alias lag='list-aliases | grep '

#useful commands

#hardware
alias list-cpu='lscpu' #cpu #list-hardware #hardware
alias list-hardware='lshw' #hardware #list-hardware #motherboard #storage #memory #usb #cpu #hardware-info
alias hardware-info='hwinfo --short' #hardware #list-hardware #info #cpu #memory #hardware-info
alias list-peripherals='lspci' #peripherals #peripheral-component-interconnect #hardware #bus #pci #list-pci

#packages
alias uninstall='sudo apt-get remove' #uninstall #remove #delete #apt #apt-get #package
alias list-packages='sudo apt list --installed' #list-packages #list-installed
alias autoremove='sudo apt-get autoremove' #cleanup #autoremove #remove-dependencies #packages
alias dpkg-list='dpkg --list' #list-packages #dpkg
alias purge-package='sudo apt-get purge' #purge #packages #completely-remove #remove-settings

#network
alias pid-port='sudo netstat -nlp | grep ' #used-port #server #port #(sudo netstat -nlp | grep :80)

#open config files
alias bashrc='vi ~/.bashrc'
alias bashrca='vi ~/.bashrc_aliases'


